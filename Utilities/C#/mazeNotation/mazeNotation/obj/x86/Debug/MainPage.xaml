<Page
    x:Class="mazeNotation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mazeNotation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="1169.811" d:DesignWidth="1528.302">
    <!-- 5 pixel border around everything
    buttons needs to be at bottom right of thing they control, right aligned with 10 pixels between two buttons
    additional buttons needed
        - save text
    text should be left aligned
    flex should be working for everything (right side doesn't work)
    title for app
    small intro text about what to do
    colons at end of label
    input boxes smaller, text centered
    min is 2, max is 15(?)
    will need to be able to load and save models-->
    <Grid x:ConnectionId='2' x:Name="mainGrid" Margin="10,10,0,0">
        <TextBox x:ConnectionId='3' x:Name="numRows" HorizontalAlignment="Left" Margin="451,142,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top"                                   InputScope="Digits"/>
        <TextBox x:ConnectionId='4' x:Name="numCols" HorizontalAlignment="Left" Margin="193,148,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top"                                   InputScope="Digits"/>
        <Button x:ConnectionId='5' x:Name="GenerateButton" Content="Create" Margin="759,137,0,0" VerticalAlignment="Top"                             />
        <TextBlock x:ConnectionId='6' x:Name="RowLabel" HorizontalAlignment="Left" Margin="343,149,0,0" TextWrapping="Wrap" Text="Number of Rows" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='7' x:Name="ColumnLable" HorizontalAlignment="Left" Margin="67,155,0,0" TextWrapping="Wrap" Text="Number of Columns" VerticalAlignment="Top"/>

        <Border Grid.Row="0" BorderBrush="Gray" VerticalAlignment="Bottom" Margin="5,5,5,5"/>

        <Border Grid.Row="1" BorderBrush="Gray" VerticalAlignment="Bottom"/>
        <Border x:ConnectionId='8' x:Name="gridBorder" BorderBrush="Black" BorderThickness="1" Margin="5,185,631,177"/>
        <Button x:ConnectionId='9' Content="Generate" Margin="988,134,0,0" VerticalAlignment="Top"                         />
        <TextBox x:ConnectionId='10' x:Name="outputText" HorizontalAlignment="Left" Margin="907,185,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="798" Width="583"/>
    </Grid>
    
</Page>

